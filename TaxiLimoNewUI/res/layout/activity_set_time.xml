<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="@dimen/normal_padding"
    tools:context="digital.dispatch.TaxiLimoNewUI.Book.SetTimeActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape_searchbar"
        android:orientation="vertical"
        android:padding="@dimen/normal_padding" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Now" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/later"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Later" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/normal_padding" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <kankan.wheel.widget.WheelView
                    android:id="@+id/dates"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".5" />

                <kankan.wheel.widget.WheelView
                    android:id="@+id/times"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".5" />
            </LinearLayout>

            <TextView
                android:id="@+id/disable_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:alpha=".8"
                android:background="@color/white"
                android:clickable="true"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/question_exclamation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginRight="@dimen/small_padding"
        android:layout_marginTop="@dimen/small_padding"
        android:gravity="center"
        android:textColor="@color/gray_light"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_toRightOf="@+id/question_exclamation"
        android:layout_marginTop="@dimen/big_margin"
        android:text="@string/time_is_local_time" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="0.50"
            android:background="@drawable/white_button_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="Cancel" />

        <TextView
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.50"
            android:background="@drawable/white_button_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="Save" />
    </LinearLayout>

</RelativeLayout>