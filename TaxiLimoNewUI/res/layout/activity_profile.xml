    <LinearLayout
        android:id="@+id/ll_info_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/rl_title"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginTop="@dimen/normal_padding"
            android:background="@drawable/shape_textview_border"
            android:ems="10"
            android:hint="@string/name"
            android:inputType="textPersonName"
            android:paddingLeft="@dimen/normal_padding" >
        </EditText>

 

        <EditText
            android:id="@+id/edt_userEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginTop="@dimen/normal_padding"
            android:background="@drawable/shape_textview_border"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/normal_padding" />

        

        <EditText
            android:id="@+id/edt_phoneNum"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginTop="@dimen/normal_padding"
            android:background="@drawable/shape_textview_border"
            android:ems="10"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:paddingLeft="@dimen/normal_padding" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ll_sms_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_info_form"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="@dimen/normal_padding"
        android:orientation="vertical"
        android:visibility="gone" >"

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_verification"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="@dimen/normal_padding"
            android:background="@drawable/shape_textview_border"
            android:hint="@string/verify_hint"
            android:paddingLeft="@dimen/normal_padding">
			
            <requestFocus />
        </EditText>
		
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:orientation="horizontal" >
            
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:id="@+id/question_circle"
        	android:textColor="@color/gray_light"
        	android:layout_marginRight="@dimen/small_padding"
        	android:layout_marginTop="@dimen/small_padding"	
        	android:layout_gravity="center"
        	android:textSize="28sp"
        	android:text="@string/name" />
        	
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_padding"
            android:text="@string/verify_not_receive"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="12sp" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:orientation="horizontal">

	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/verify_check_phone"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:textSize="12sp" />
	
	        <TextView
	            android:id="@+id/request_new_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:clickable="true"
	            android:text="@string/verify_request_new"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:textColor="@color/blue_text"
	            android:textSize="12sp" />

        </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
   

   <TextView
            android:id="@+id/profile_save_btn"
            style="@style/TextDropShadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/map_book_btn_height"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/small_padding"
            android:background="@drawable/green_btn_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="@dimen/book_font_size"
            android:textStyle="bold" />
   
   <TextView
            android:id="@+id/profile_verify_btn"
            style="@style/TextDropShadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/map_book_btn_height"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/small_padding"
            android:background="@drawable/green_btn_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/verify"
            android:textColor="@color/white"
            android:textSize="@dimen/book_font_size"
            android:textStyle="bold" 
            android:visibility="gone"/>

</RelativeLayout>
