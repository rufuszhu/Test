<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="digital.dispatch.TaxiLimoNewUI.Drawers.ProfileActivity" >

        
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:orientation="vertical"
	    android:gravity="center"
	    android:paddingTop="@dimen/profile_edit_text_height" >

        <LinearLayout
            android:layout_width="@dimen/profile_row_width"
            android:layout_height="@dimen/profile_row_height"
            android:orientation="horizontal" 
            android:gravity="center">

            <TextView
                android:id="@+id/tv_firstname"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:text="@string/FIRST_NAME"
                style="@style/ProfileTextView"/>

            <EditText
                android:id="@+id/et_firstName"
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:layout_height="@dimen/profile_edit_text_height"
                android:layout_marginLeft="@dimen/small_padding"
                android:inputType="textPersonName"
                android:background="@drawable/shape_textview_border_disable"
                android:selectAllOnFocus="true"
                android:paddingLeft="@dimen/normal_margin"
                android:ems="12" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="@dimen/profile_row_width"
            android:layout_height="@dimen/profile_row_height"
            android:orientation="horizontal"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_lastname"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight=".4"
                style="@style/ProfileTextView"
                android:text="@string/LAST_NAME"/>

            <EditText
                android:id="@+id/et_lastName"
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:layout_height="@dimen/profile_edit_text_height"
                android:layout_marginLeft="@dimen/small_padding"
                android:inputType="textPersonName"
                android:background="@drawable/shape_textview_border_disable"
                android:selectAllOnFocus="true"
                android:paddingLeft="@dimen/normal_margin"
                android:ems="12" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="@dimen/profile_row_width"
            android:layout_height="@dimen/profile_row_height"
            android:orientation="horizontal" 
            android:gravity="center">

            <TextView
                android:id="@+id/tvphone"
                android:text="@string/phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                style="@style/ProfileTextView"/>

            <EditText
                android:id="@+id/edt_phoneNum"
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:layout_height="@dimen/profile_edit_text_height"
                android:layout_marginLeft="@dimen/small_padding"
                android:inputType="phone"
                android:background="@drawable/shape_textview_border_disable"
                android:selectAllOnFocus="true"
                android:paddingLeft="@dimen/normal_margin"
                android:ems="12" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="@dimen/profile_row_width"
            android:layout_height="@dimen/profile_row_height"
            android:orientation="horizontal"
            android:gravity="center" >

            <TextView
                android:id="@+id/tvpfemail"
                android:text="@string/profile_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                style="@style/ProfileTextView" />

            <EditText
                android:id="@+id/edt_userEmail"
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:layout_height="@dimen/profile_edit_text_height"
                android:layout_marginLeft="@dimen/small_padding"
                android:inputType="textEmailAddress"
                android:background="@drawable/shape_textview_border_disable"
                android:selectAllOnFocus="true"
                android:paddingLeft="@dimen/normal_margin"
                android:ems="12" />

        	</LinearLayout>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/profile_save_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bot_button_height"
            android:baselineAligned="false"
 			android:layout_alignParentBottom="true"
            android:background="@drawable/gray_button_selector"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal" 
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/gray_btn_icon_size"
                android:layout_height="@dimen/gray_btn_icon_size"
                android:src="@drawable/icon_save"
                android:contentDescription="@null" />
            
            <Space
            android:layout_width="@dimen/normal_padding"
            android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                style="@style/GreenBtnText" />
        </LinearLayout>
        
  

</RelativeLayout>