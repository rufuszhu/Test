<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="digital.dispatch.TaxiLimoNewUI.Drawers.ProfileActivity" >

        
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:orientation="vertical"
	    android:paddingLeft="@dimen/normal_padding"
	    android:paddingRight="@dimen/normal_padding"
	    android:paddingTop="@dimen/edit_text_height" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/big_margin"
            android:paddingRight="@dimen/big_margin" >

            <TextView
                android:id="@+id/tvname"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                
                android:text="@string/name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/blue" 
                style="@style/TextView"/>

            <EditText
                android:id="@+id/edt_userName"
                android:layout_width="0dp"
                android:layout_height="@dimen/edit_text_height"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:background="@drawable/shape_textview_border"
                android:selectAllOnFocus="true"
                android:paddingLeft="@dimen/normal_margin"
                android:ems="12" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/big_margin"
            android:paddingRight="@dimen/big_margin" >

            <TextView
                android:id="@+id/tvphone"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
       
                android:text="@string/phone"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/blue" 
                style="@style/TextView"/>

            <EditText
                android:id="@+id/edt_phoneNum"
                android:layout_width="0dp"
                android:layout_height="@dimen/edit_text_height"
                android:layout_weight="1"
                android:inputType="phone"
                android:background="@drawable/shape_textview_border"
                android:selectAllOnFocus="true"
                android:paddingLeft="@dimen/normal_margin"
                android:ems="12" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/big_margin"
            android:paddingRight="@dimen/big_margin" >

            <TextView
                android:id="@+id/tvpfemail"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                
                android:text="@string/profile_email"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/blue" 
                style="@style/TextView"/>

            <EditText
                android:id="@+id/edt_userEmail"
                android:layout_width="0dp"
                android:layout_height="@dimen/edit_text_height"
                android:layout_weight="1"
                android:inputType="textEmailAddress"
                android:background="@drawable/shape_textview_border"
                android:selectAllOnFocus="true"
                android:paddingLeft="@dimen/normal_margin"
                android:ems="12" />

        	</LinearLayout>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/profile_save_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bot_button_height"
            android:baselineAligned="false"
 			android:layout_alignParentBottom="true"
            android:background="@drawable/gray_button_selector"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/gray_btn_icon_size"
                android:layout_height="@dimen/gray_btn_icon_size"
                android:src="@drawable/icon_save"
                android:contentDescription="@null" />
            
            <Space
            android:layout_width="@dimen/normal_padding"
            android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                style="@style/GreenBtnText" />
        </LinearLayout>
        
  

</RelativeLayout>