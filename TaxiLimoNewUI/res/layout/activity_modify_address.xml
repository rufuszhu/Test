<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="digital.dispatch.TaxiLimoNewUI.Book.ModifyAddressActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".21"
        android:orientation="vertical" 
        android:padding="10px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="horizontal" 
            android:paddingBottom="5px">

            <EditText
                android:id="@+id/tv_streetNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5px"
                android:paddingLeft="5px"
                android:layout_weight=".4"
                android:hint="Street Number"
                android:background="@drawable/shape_textview_border"
                android:ems="10"
                android:inputType="number" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/tv_unitNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5px"
                android:layout_marginRight="10px"
                android:layout_weight=".4"
                android:paddingLeft="5px"
                android:hint="Unit Number"
                android:background="@drawable/shape_textview_border"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/driver_note_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:background="@drawable/white_button_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="Driver Note" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5px" >
            <FrameLayout  
                        android:layout_width="fill_parent"  
                        android:layout_height="fill_parent" >  

            <AutoCompleteTextView
                android:id="@+id/autocomplete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:paddingLeft="5px"
                android:hint="Street Name"
                android:background="@drawable/shape_textview_border"/>

            <ImageView
                android:id="@+id/clear_autocomplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="5px"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />
                      
                    </FrameLayout>  

        </LinearLayout>
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/lvExp"
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:layout_weight=".66"
        android:isScrollContainer="false" >
    </ExpandableListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal" 
        android:layout_weight=".13"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/favorite_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:orientation="horizontal" 
            android:clickable="true"
            android:gravity="center"
            android:background="@drawable/gray_button_selector">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/abc_ab_bottom_solid_dark_holo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Favorite"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            

        </LinearLayout>

        <LinearLayout
            android:id="@+id/save_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal" 
            android:clickable="true"
            android:layout_weight=".5"
            android:gravity="center"
            android:background="@drawable/gray_button_selector">
            
             <ImageView
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/abc_ab_bottom_solid_dark_holo" />

            <TextView
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textAppearance="?android:attr/textAppearanceMedium" />

           

        </LinearLayout>
    </LinearLayout>

</LinearLayout>