<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="digital.dispatch.TaxiLimoNewUI.Book.ModifyAddressActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".21"
        android:orientation="vertical"
        android:padding="@dimen/normal_margin" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/small_padding" >

            <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="0px"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <EditText
                android:id="@+id/tv_streetNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:background="@drawable/shape_textview_border"
                android:ems="10"
                android:hint="@string/street_number"
                android:inputType="number"
                android:windowSoftInputMode="stateVisible"
                android:nextFocusLeft="@id/tv_streetNumber"
                android:nextFocusUp="@id/tv_streetNumber"
                android:paddingLeft="@dimen/editView_paddign"
                android:selectAllOnFocus="true" 
                android:imeOptions="actionDone">
            </EditText>

            <EditText
                android:id="@+id/tv_unitNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_marginRight="@dimen/normal_margin"
                android:layout_weight=".4"
                android:background="@drawable/shape_textview_border"
                android:ems="10"
                android:hint="@string/unit_number"
                android:inputType="number"
                android:paddingLeft="@dimen/editView_paddign" 
                android:imeOptions="actionDone"/>

            <TextView
                android:id="@+id/driver_note_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:background="@drawable/driver_note_btn"
                android:clickable="true"
                />
        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:gravity="center"
            
            android:orientation="horizontal"
            android:paddingTop="@dimen/small_padding" >

            <AutoCompleteTextView
                android:id="@+id/autocomplete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_textview_border"
                android:ems="10"
                android:hint="@string/street_name"
                android:paddingLeft="@dimen/editView_paddign" 
                android:paddingRight="32dp"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:inputType="textPostalAddress"/>

            <ImageView
                android:id="@+id/clear_autocomplete"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/normal_padding"
                android:layout_marginLeft="@dimen/normal_padding"
                android:clickable="true"
                android:src="@drawable/icon_clearinput" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".66"
        android:orientation="vertical" >

        <ExpandableListView
            android:id="@+id/lvExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="false" >
        </ExpandableListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bot_button_height"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/favorite_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="@drawable/gray_button_selector"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/gray_btn_icon_size"
                android:layout_height="@dimen/gray_btn_icon_size"
                android:src="@drawable/icon_add_favorite" />
            
            <Space
            android:layout_width="@dimen/small_padding"
            android:layout_height="match_parent" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_favorite"
                style="@style/BlueBtnText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contact_favorite_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="@drawable/gray_button_selector"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:layout_width="@dimen/gray_btn_icon_size"
                android:layout_height="@dimen/gray_btn_icon_size"
                android:src="@drawable/icon_add_favorite" />
            
            <Space
            android:layout_width="@dimen/small_padding"
            android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_favorite"
                style="@style/BlueBtnText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/delete_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="@drawable/gray_button_selector"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:layout_width="@dimen/gray_btn_icon_size"
                android:layout_height="@dimen/gray_btn_icon_size"
                android:src="@drawable/icon_remove" />
            
            <Space
            android:layout_width="@dimen/normal_padding"
            android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remove"
                style="@style/RedBtnText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/save_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="@drawable/gray_button_selector"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/gray_btn_icon_size"
                android:layout_height="@dimen/gray_btn_icon_size"
                android:src="@drawable/icon_save" />
            
            <Space
            android:layout_width="@dimen/normal_padding"
            android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                style="@style/GreenBtnText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="@drawable/gray_button_selector"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:layout_width="@dimen/gray_btn_icon_size"
                android:layout_height="@dimen/gray_btn_icon_size"
                android:src="@drawable/icon_save" />
            
            <Space
            android:layout_width="@dimen/normal_padding"
            android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select"
                style="@style/GreenBtnText" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>