<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="digital.dispatch.TaxiLimoNewUI.MainActivity$PlaceholderFragment" >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/small_padding" >

        <LinearLayout
            android:id="@+id/addressBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/map_addressBar_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/address_bar_background"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image_myplace"
                android:layout_width="@dimen/little_guy_icon_size"
                android:layout_height="@dimen/little_guy_icon_size"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/big_margin"
                android:src="@drawable/little_guy_icon" />

            <TextView
                android:id="@+id/text_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/normal_padding"
                android:layout_weight=".8"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_extra_light" />

            <LinearLayout
                android:id="@+id/my_location_btn"
                android:layout_width="@dimen/address_bar_icon_size"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/normal_padding"
                android:paddingRight="@dimen/normal_padding" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/my_location_icon" />
            </LinearLayout>
        </LinearLayout>

        

        

        <LinearLayout
            android:id="@+id/ll_no_company_selected"
            android:layout_width="match_parent"
            android:layout_height="@dimen/map_company_bar_height"
            android:layout_above="@+id/book_button"
            android:background="@drawable/company_bar"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_empty_comany_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/big_margin"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        

        <ImageView
            android:id="@+id/blue_pin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/pin_blue" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/white_line"
        android:background="@color/gray_light" />

    <View
        android:id="@+id/white_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white" />

</RelativeLayout>