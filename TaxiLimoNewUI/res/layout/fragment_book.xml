        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_no_company_selected"
            android:layout_width="match_parent"
            android:layout_height="@dimen/map_company_bar_height"
            android:layout_above="@+id/book_button"
            android:background="@drawable/company_bar"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_empty_comany_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/big_margin"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <TextView
            android:id="@+id/book_button"
            style="@style/TextDropShadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/map_book_btn_height"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/small_padding"
            android:layout_weight=".55"
            android:background="@drawable/book_btn_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/book"
            android:textColor="@color/white"
            android:textSize="@dimen/book_font_size"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/pin_blue" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/white_line"
        android:background="@color/gray_light" />

    <View
        android:id="@+id/white_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white" />

</RelativeLayout>