<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="digital.dispatch.TaxiLimoNewUI.MainActivity$PlaceholderFragment" >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/small_padding" >

        <LinearLayout
            android:id="@+id/addressBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/map_addressBar_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/address_bar_background"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image_myplace"
                android:layout_width="@dimen/little_guy_icon_size"
                android:layout_height="@dimen/little_guy_icon_size"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/big_margin"
                android:src="@drawable/little_guy_icon" />

            <TextView
                android:id="@+id/text_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/normal_padding"
                android:layout_weight=".8"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_extra_light" />

            <LinearLayout
                android:id="@+id/my_location_btn"
                android:layout_width="@dimen/address_bar_icon_size"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/normal_padding"
                android:paddingRight="@dimen/normal_padding" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/my_location_icon" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/map_option_height"
            android:layout_below="@+id/addressBar"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/pickupTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".24"
                android:background="@drawable/map_box"
                android:clickable="true"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".35"
                    android:gravity="center"
                    android:text="PICKUP TIME"
                    android:textColor="@color/blue_text"
                    android:textSize="@dimen/map_option_title_font"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_pickup"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".65"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/normal_padding"
                    android:text="Now"
                    android:textColor="@color/gray_light"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/driverNote"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".24"
                android:background="@drawable/map_box"
                android:clickable="true"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".35"
                    android:gravity="center"
                    android:text="DRIVER NOTE"
                    android:textColor="@color/blue_text"
                    android:textSize="@dimen/map_option_title_font"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_note"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".65"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/normal_padding"
                    android:text="@string/empty_note"
                    android:textColor="@color/gray_light"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/destination_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".52"
                android:background="@drawable/destination_box"
                android:clickable="true"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".35"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/normal_padding"
                    android:text="DESTINATION"
                    android:textColor="@color/blue_text"
                    android:textSize="@dimen/map_option_title_font"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_destination"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".65"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/normal_padding"
                    android:singleLine="true"
                    android:text="@string/empty_note"
                    android:textColor="@color/gray_light"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/attribute"
            android:layout_width="match_parent"
            android:layout_height="@dimen/map_company_bar_height"
            android:layout_above="@+id/book_button"
            android:background="@drawable/company_bar"
            android:clickable="true"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_padding" >

            <ImageView
                android:id="@+id/iv_company_icon"
                android:layout_width="@dimen/map_company_icon_height"
                android:layout_height="@dimen/map_company_icon_height"
                android:layout_marginLeft="@dimen/small_padding" />

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/normal_padding"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceLarge" />

