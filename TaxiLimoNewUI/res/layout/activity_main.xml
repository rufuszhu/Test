<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="digital.dispatch.TaxiLimoNewUI.MainActivity" >
    
    
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    
    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_above="@+id/tabs"
        android:layout_height="match_parent"
        android:isScrollContainer="false" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:baselineAligned="false"
        android:layout_alignParentBottom="true"
        android:isScrollContainer="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/tab0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".33"
            android:background="@color/background_tab"
            android:gravity="center" >

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="@dimen/tab_icon_size"
                android:layout_height="@dimen/tab_icon_size"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_action_about" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_1"
                android:layout_centerVertical="true"
                android:text="@string/book"
                android:textColor="@color/white"
                android:textSize="@dimen/tab_font_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".33"
            android:background="@color/background_tab"
            android:gravity="center" >

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="@dimen/tab_icon_size"
                android:layout_height="@dimen/tab_icon_size"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_action_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_2"
                android:layout_centerVertical="true"
                android:text="@string/track"
                android:textColor="@color/white"
                android:textSize="@dimen/tab_font_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".33"
            android:background="@color/background_tab"
            android:gravity="center" >

            <ImageView
                android:id="@+id/img_3"
                android:layout_width="@dimen/tab_icon_size"
                android:layout_height="@dimen/tab_icon_size"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_action_event" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_3"
                android:layout_centerVertical="true"
                android:text="@string/history"
                android:textColor="@color/white"
                android:textSize="@dimen/tab_font_size" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

