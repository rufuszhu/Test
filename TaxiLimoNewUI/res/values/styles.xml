<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="CustomActionBarTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TextDropShadow">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="TextDropShadowWhite">
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="TripTableTitleColumn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">.3</item>
        <item name="android:background">@drawable/shape_table_cell</item>
        <item name="android:paddingTop">@dimen/normal_margin</item>
        <item name="android:paddingLeft">@dimen/normal_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TripTableValueColumn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">@dimen/table_row_min_height</item>
        <item name="android:layout_weight">.7</item>
        <item name="android:background">@drawable/shape_table_cell</item>
        <item name="android:paddingTop">@dimen/normal_margin</item>
        <item name="android:paddingLeft">@dimen/normal_margin</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RedBtnText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/red_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="BlueBtnText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#075a9e</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="GreenBtnText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/completed_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    
    <style name="GreenBlueBtnText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#469D9F</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    
    <style name="WhiteBtnText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    
    <style name="NormalTextColor">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="ProfileTextView" parent="NormalTextColor">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_text</item>
    </style>
    
    <style name="InfoLabelTitle">
        <item name="android:textColor">@color/gray_line</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>